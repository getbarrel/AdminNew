			$paging_type_target = "";
		}


		//echo $total_page.":::".$next."::::".$prev."<br>";
		if ($total){
			$prev_mark = ($page >= 2) ? " <a href='".$HTTP_URL."?bg_ix=".$_GET[bg_ix]."&bgbm_ix=".$this->bbs_config->dt[bgbm_ix]."&".$paging_type_param."nset=".($nset)."&page=".($page-1)."$add_query' ".$paging_type_target."><img src='/image/btn_pre' border=0 align=absmiddle></a> " : "";
			$pre_mark .= ($prev == -9) ? " <a href='".$HTTP_URL."?bg_ix=".$_GET[bg_ix]."&bgbm_ix=".$this->bbs_config->dt[bgbm_ix]."&".$paging_type_param."nset=".($nset-1)."&page=".(($nset-2)*10+1)."$add_query' ".$paging_type_target."><img src='/image/btn_tenpre' border=0 align=absmiddle></a> " : "";
			$next_mark = ($total_page > 1) ? " <a href='".$HTTP_URL."?bg_ix=".$_GET[bg_ix]."&bgbm_ix=".$this->bbs_config->dt[bgbm_ix]."&".$paging_type_param."nset=".($nset)."&page=".($nset+1)."$add_query' ".$paging_type_target."><img src='/image/btn_next' border=0 align=absmiddle></a>" :  "";
			$next_mark .= (total_page > 10) ? " <a href='".$HTTP_URL."?bg_ix=".$_GET[bg_ix]."&bgbm_ix=".$this->bbs_config->dt[bgbm_ix]."&".$paging_type_param."nset=".($nset+1)."&page=".($nset*10+1)."$add_query' ".$paging_type_target."><img src='/image/btn_tennext' border=0 align=absmiddle></a>" :  "";
		}

		$page_string2 = $prev_mark;

	//	for ($i = $page - 10; $i <= $page + 10; $i++)

		for ($i = ($nset-1)*10+1 ; $i <= (($nset-1)*10 + 10); $i++)
		{
			if ($i > 0)
			{
				if ($i <= $total_page)
				{

					if ($i != $page){
						if($i != (($nset-1)*10+1)){
							$page_string2 = $page_string2.("<font color='silver'>|</font> <a href='".$HTTP_URL."?bg_ix=".$_GET[bg_ix]."&bgbm_ix=".$this->bbs_config->dt[bgbm_ix]."&".$paging_type_param."nset=$nset&page=$i$add_query' style='font-weight:bold;color:gray' ".$paging_type_target.">$i</a> ");
						}else{
							$page_string2 = $page_string2.(" <a href='".$HTTP_URL."?bg_ix=".$_GET[bg_ix]."&bgbm_ix=".$this->bbs_config->dt[bgbm_ix]."&".$paging_type_param."nset=$nset&page=$i$add_query' style='font-weight:bold;color:gray' ".$paging_type_target.">$i</a> ");
						}

					}else{

						if($i != (($nset-1)*10+1)){
							$page_string2 = $page_string2.("<font color='silver'>|</font> <font color=ff7635 style='font-weight:bold'>$i</font> ");
						}else{
							$page_string2 = $page_string2.("<font color=ff7635 style='font-weight:bold'>$i</font> ");
						}
					}


				}
			}
		}
		if($nset < (floor($total_page/10)+1)){
			$last_page_string = "<b style='color:gray'>...</b> <a href='".$HTTP_URL."?bg_ix=".$_GET[bg_ix]."&bgbm_ix=".$this->bbs_config->dt[bgbm_ix]."&".$paging_type_param."nset=".(floor($total_page/10)+1)."&page=$total_page$add_query' style='font-weight:bold;color:gray' ".$paging_type_target.">$total_page</a> ";
		}
		$page_string2 = $page_string2.$last_page_string.$next_mark;

		return $page_string2;
	}

	function BoardAuth($mode , $mem_ix = "" , $bbs_hidden ="" , $bbs_pass =""){

		if($mode == 'list' || $mode == ''){
			if(!$this->bbs_admin_mode){
				if($this->bbs_config->dt[board_list_auth]){
					if(!$_SESSION["user"] || $this->bbs_config->dt[board_list_auth] < $_SESSION["user"]["perm"]){
						echo "<script>alert('글 읽기 권한이 없습니다.2');history.back();</script>";
						exit;
					}
				}
			}
		}else if($mode == 'read'){
			if(!$this->bbs_admin_mode){
				if($this->bbs_config->dt[board_read_auth]){ // 사용자권한중 읽기 권한이 전체가 아닐때
					if((!$_SESSION["user"] || $this->bbs_config->dt[board_read_auth] < $_SESSION["user"]["perm"]) || $_SESSION["user"]["code"] != $mem_ix && $bbs_hidden == "1"){
						echo "<script>alert('글내용 보기  권한이 없습니다.[1]');history.back();</script>";
						exit;
					}
				}else{ // 사용자권한중 읽기 권한이 전체일때
					if(($_SESSION["user"]["code"] != $mem_ix && $bbs_hidden == "1") && ($mem_ix == "" && $bbs_hidden == "1" && $_GET["bbs_pass"] != $bbs_pass) ){
						echo "<script>alert('글 내용 보기 권한이 없습니다.[2]');history.back();</script>";
						exit;
					}
				}
			}
		}else if($mode == 'modify'){
			if(!$this->bbs_admin_mode){
				if(($_SESSION["user"]["code"] != $mem_ix && $mem_ix != "") || ($_GET["bbs_pass"] != $bbs_pass) || (empty($_GET["bbs_pass"]) && $_SESSION["user"]["code"] == "")){
					echo "<script>alert('수정권한이 없습니다. 3');history.back();</script>";
					exit;
				}
			}
		//}else if($mode == 'write' || $mode == 'response'){
		}else if($mode == 'write' || $mode == 'insert' || $mode == 'update' || $mode == 'delete' || $mode == 'response' || $mode == 'comment_insert' || $mode == 'comment_delete' || $mode == 'faq_insert' || $mode == 'faq_delete' ){
			if(!$this->bbs_admin_mode){
				if($this->bbs_config->dt[board_user_write_auth_yn] != "Y" && $_SESSION["user"]["code"] != $this->bbs_config->dt[blog_owner]){
					//if($_SESSION["user"]["perm"] == "" || $this->bbs_config->dt[board_write_auth] < $_SESSION["user"]["perm"]){
						echo "<script>alert('글쓰기 권한이 없습니다. 4');history.back();</script>";
						exit;
					//}
				}
			}
		}
	}

	function getToken(){
		$token = md5(uniqid(rand()));
		setcookie("C_TOKEN",$token,0,"/","");
		return $token;
	}

