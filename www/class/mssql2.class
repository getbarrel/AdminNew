			if(!is_dir($path)){
				mkdir($path, 0777);
				chmod($path,0777);
			}else{
				//chmod($path,0777);
			}


			$fp = fopen($_SERVER["DOCUMENT_ROOT"]."/_logs/sql_injection_log.txt","a+");
			fwrite($fp,$write);
			fclose($fp);
		}

